<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="timewastr.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:name="MyApp"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="timewastr.app.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="timewastr.app.RegisterActivity"
            android:label="title_activity_register"
            android:screenOrientation="portrait"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="timewastr.app.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/main"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="timewastr.app.ArticleActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_article"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="timewastr.app.FavoritesActivity"
            android:screenOrientation="portrait"
            android:label="@string/favorites"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="timewastr.app.FavoritesRenderActivity"
            android:screenOrientation="portrait"
            android:label="@string/favorites"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="timewastr.app.FavoritesDeletedActivity"
            android:screenOrientation="portrait"
            android:label="@string/favorites"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="timewastr.app.LoadingActivity"
            android:label="@string/title_activity_loading"
            android:noHistory="true">
        </activity>
        <meta-data android:name="com.crashlytics.ApiKey" android:value="b022c1dd43339c53dd70c9955042114fcb0af8a9"/>
    </application>

</manifest>
