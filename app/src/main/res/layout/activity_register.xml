<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".timewastr.app.RegisterActivity" >

    <ImageView
        android:id="@+id/textView1"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:src="@drawable/logo_main_hd"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_marginTop="15dp"
        android:background="@drawable/loginbox"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/textView1" >
        <TextView
            android:id="@+id/userEmailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="Neou"
            android:text="EMAIL"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/userEmail"
            android:shadowColor="#ffad56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="User Email"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/userEmailText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/userPasswordText"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Neou"
            android:text="PASSWORD"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/userEmail"
            android:layout_alignLeft="@+id/userEmail"
            android:layout_alignStart="@+id/userEmail" />

        <EditText
            android:id="@+id/userPassword"
            android:shadowColor="#ffad56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="User Password"
            android:inputType="textPassword"
            android:layout_below="@+id/userPasswordText"/>

        <TextView
            android:id="@+id/userPasswordConfirmationText"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Neou"
            android:text="PASSWORD"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/userPassword"
            android:layout_alignLeft="@+id/userPassword"
            android:layout_alignStart="@+id/userPassword" />

        <EditText
            android:id="@+id/userPasswordConfirmation"
            android:shadowColor="#ffad56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="User Password Confirmation"
            android:inputType="textPassword"
            android:layout_below="@+id/userPasswordConfirmationText"/>

        <Button
            android:id="@+id/registerButton"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="Calibri"
            android:background="#ffad56"
            android:textColor="#fff"
            android:textSize="23dp"
            android:onClick="registerNewAccount"
            android:text="REGISTER"
            android:layout_below="@+id/userPasswordConfirmation"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>



</RelativeLayout>