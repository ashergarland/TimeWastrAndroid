<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".timewastr.app.RegisterActivity" >

    <ImageView
        android:id="@+id/textView1"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:src="@drawable/timewastr"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_marginTop="15dp"
        android:background="@drawable/loginbox"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/textView1" >
        <TextView
            android:id="@+id/mUserEmailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="Neou"
            android:text="EMAIL"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/userEmail"
            android:shadowColor="#ffad56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="User Email"
            android:layout_below="@+id/mUserEmailText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/userNameText"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Neou"
            android:text="USERNAME"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/userEmail"
            android:layout_alignLeft="@+id/userEmail"
            android:layout_alignStart="@+id/userEmail" />

        <EditText
            android:id="@+id/userPasswordText"
            android:shadowColor="#ffad56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="User Name"
            android:inputType="text"
            android:layout_below="@+id/userNameText"/>

        <TextView
            android:id="@+id/userPasswordText"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Neou"
            android:text="PASSWORD"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/userPasswordText"
            android:layout_alignLeft="@+id/userPasswordText"
            android:layout_alignStart="@+id/userPasswordText" />

        <EditText
            android:id="@+id/userPassword"
            android:shadowColor="#ffad56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="User Password"
            android:inputType="text"
            android:layout_below="@+id/userPasswordText"/>

        <TextView
            android:id="@+id/userPasswordConfirmationText"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Neou"
            android:text="PASSWORD"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/userPassword"
            android:layout_alignLeft="@+id/userPassword"
            android:layout_alignStart="@+id/userPassword" />

        <EditText
            android:id="@+id/userPasswordConfirmation"
            android:shadowColor="#ffad56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="User Password Confirmation"
            android:inputType="text"
            android:layout_below="@+id/userPasswordConfirmationText"/>

        <Button
            android:id="@+id/button1"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="Calibri"
            android:background="#ffad56"
            android:textColor="#fff"
            android:textSize="23dp"
            android:onClick="register"
            android:text="REGISTER"
            android:layout_below="@+id/userPasswordConfirmation"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="Neou"
        android:text="___________________      __________________"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/relativeLayout2"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="Neou"
        android:text="                                 OR"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/relativeLayout2"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textView5"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/relativeLayout2" >

            <Button
                android:id="@+id/button2"
                android:layout_marginRight="1dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="Neou"
                android:layout_weight=".5"
                android:background="#ffad56"
                android:textColor="#fff"
                android:textSize="23dp"
                android:onClick="facebookLogin"
                android:gravity="right"
                android:text="FACEBOOK "
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/facebook"
                android:adjustViewBounds="true"
                android:contentDescription="facebook"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/relativeLayout2" >
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="35dp"
                android:fontFamily="Neou"
                android:background="#ffad56"
                android:textColor="#fff"
                android:textSize="23sp"
                android:onClick="googleLogin"
                android:gravity="right"
                android:text="GOOGLE+ "
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/google"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/button3"
                android:layout_alignStart="@+id/button3" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>