<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="timewastr.main.MainActivity">

    <LinearLayout
        android:id="@+id/filters"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="center"
        >
        <ToggleButton
            android:id="@+id/togglebutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:textSize="11dp"
            android:textOn="NEWS"
            android:textOff="NEWS"
            android:onClick="onToggleClicked"/>
        <ToggleButton
            android:id="@+id/togglebutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:textSize="11dp"
            android:textOn="SPORTS"
            android:textOff="SPORTS"
            android:onClick="onToggleClicked"/>
        <ToggleButton
            android:id="@+id/togglebutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:textSize="11dp"
            android:textOn="FINANCE"
            android:textOff="FINANCE"
            android:onClick="onToggleClicked"/>
        <ToggleButton
            android:id="@+id/togglebutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:textSize="11dp"
            android:textOn="POLITICS"
            android:textOff="POLITICS"
            android:onClick="onToggleClicked"/>
        <ToggleButton
            android:id="@+id/togglebutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:textSize="11dp"
            android:textOn="TECH"
            android:textOff="TECH"
            android:onClick="onToggleClicked"/>
    </LinearLayout>

    <TextView
        android:id="@+id/h1"
        android:layout_below="@id/filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="I'D LIKE TO"
        android:textSize="45dp"
        ></TextView>

    <LinearLayout
        android:id="@+id/h2"
        android:layout_below="@id/h1"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:gravity="right"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-80dp"
            android:src="@drawable/logo_clock_hd"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="WASTE . . ."
            android:textSize="45dp"
            ></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/clockText"
        android:layout_below="@id/h2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="5"
        android:textSize="124dp"
        ></TextView>

    <TextView
        android:id="@+id/h3"
        android:layout_below="@id/clockText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="#bbbbbb"
        android:textSize="24dp"
        android:text="MINUTES"
        ></TextView>

    <SeekBar
        android:id="@+id/timeBar"
        android:layout_below="@+id/h3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        ></SeekBar>

    <Button
        android:id="@+id/goButton"
        android:layout_below="@+id/timeBar"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:background="@color/orange"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:text="GO"
        />

</RelativeLayout><!-- From: file:/C:/Users/Zawu/AndroidStudioProjects/TimeWastr/app/src/main/res/layout/activity_main.xml -->